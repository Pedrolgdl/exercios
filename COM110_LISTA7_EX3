#include <stdio.h>
#include <stdlib.h>
#define L 4
#define C 2

int main(void) {
  int v[L][C], minmax[0][0];
  int menor = 1000, l, c, i, j, opc ;

  printf("\n     Digite\n\n    1. Preenchimento manual\n    2. Gerar números aleatórios\n\n");
  printf("     Opição : ");
  scanf("%d",&opc);
  printf("\n\n");
  // menu preenchrer manual ou com numeros aleatorios
  switch(opc){
    case 1 :
      for (  i =0; i<L; i++){
          for( j =0; j<C; j++){
            printf("  Digite um valor para [%d][%d] : ", i,j);
            scanf("%d", &v[i][j]);
          }
          printf("\n");
        }

        for (  i =0; i<L; i++){
          for( j =0; j<C;j++){
            if( v[i][j] < menor ){
              menor = v[i][j];
              
              
              //minmax[l][c] = menor;
            }

          }
        }
        printf("\n\n  O menor valor é : %d", menor);
          
             for(i=0; i<L; i++){
              for(j=0;j<C;j++){
            if(v[i][j]==menor ){
                   printf("\n  E está localizado na Posção [%d,%d]",i,j);  
                   if(v[i][j-1]>menor){
               printf("\n  O MINMAX está localizado na Posção [%d,%d]",i,j-1);
               printf("\n  Logo, MINMAX é : %d ", v[i][j-1]);

            }  
          else if(  v[i][j+1]> menor){
               printf("\n  O MINMAX está localizado na Posção [%d,%d]",i,j+1);
               printf("\n  Logo, MINMAX é : %d ", v[i][j+1]);
            }
            
            } 
            
        }
       
        printf("\n ");
   }

    break;
    // aleatorios
    case 2 :
for (  i =0; i<L; i++){
    for( j =0; j<C; j++){
      v[i][j] = rand()%110;
      printf("\n  Valor sorteado para [%d][%d] é : %d", i,j, v[i][j]);
     
    }
    printf(" \n");
  }

  for (  i =0; i<L; i++){
    for( j =0; j<C;j++){
      if( v[i][j] < menor ){
        menor = v[i][j];
       
        //minmax[l][c] = menor;
      }

    }
  }
   printf("\n\n  O menor valor é : %d", menor);
 
           for(i=0; i<L; i++){
              for(j=0;j<C;j++){
            if(v[i][j]==menor ){
                   printf("\n  E está localizado na Posção [%d,%d]",i,j);  
                   if(v[i][j-1]>menor){
               printf("\n  O MINMAX está localizado na Posção [%d,%d]",i,j-1);
               printf("\n  Logo, MINMAX é : %d ", v[i][j-1]);

            }  
          
            } 
            else if( v[i][j]==menor && v[i][j+1]> menor){
               printf("\n  O MINMAX está localizado na Posção [%d,%d]",i,j+1);
               printf("\n  Logo, MINMAX é : %d ", v[i][j+1]);
            }
            
        }
       
        printf("\n ");
   }
          
    break;
  }
  
}
